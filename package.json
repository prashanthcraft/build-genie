{
  "name": "build-genie",
  "version": "1.0.2",
  "description": "Build genie a Utility functions to generate and serve build information",
  "author": {
    "name": "Prashanth"
  },
  "main": "dist/index.js",
  "module": "dist/index.d.ts",
  "bin": {
    "build-genie": "./bin/build-genie.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rm -rf ./dist",
    "publish:prod": "npm publish --registry",
    "fix": "eslint . --fix",
    "posttest": "eslint .",
    "test": "nyc ts-mocha --type-check --timeout=30000",
    "test:unit": "ts-mocha  --exclude test/git.spec.js",
    "coverage": "nyc report --reporter=lcov",
    "release": "dist/bin/cli.js",
    "build": "npx tsc && tsup"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "chalk": "^5.4.1",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-config-spec": "^2.1.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "conventional-recommended-bump": "^10.0.0",
    "current-git-branch": "^1.1.0",
    "detect-indent": "^7.0.1",
    "detect-newline": "^4.0.1",
    "dotgitignore": "^2.1.0",
    "figures": "^6.1.0",
    "find-up": "^7.0.0",
    "git-describe": "^4.1.1",
    "git-semver-tags": "^8.0.0",
    "jsdom": "^25.0.1",
    "rest-api-errors": "^1.3.1",
    "semver": "^7.6.3",
    "tslib": "^2.8.0",
    "w3c-xmlserializer": "^5.0.0",
    "yaml": "^2.6.1",
    "yargs": "^17.7.2"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prashanthcraft/build-genie.git"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/express": "^4.17.21",
    "@types/git-semver-tags": "^7.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.63",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.2",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "jest-serial-runner": "^1.2.1",
    "mockery": "^2.1.0",
    "prettier": "^3.4.2",
    "shelljs": "^0.8.5",
    "std-mocks": "^2.0.0",
    "strip-ansi": "^7.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "tsup": {
    "minify": true,
    "minifyIdentifiers": false,
    "treeshake": true,
    "tsconfig": "tsconfig.json",
    "dts": true,
    "entry": [
      "./src/index.ts"
    ],
    "outDir": "./dist",
    "format": [
      "esm",
      "cjs"
    ]
  },
  "license": "MIT"
}
